<Window x:Class="MahnitolaList.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource App_Title}"
        Height="300" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="240">
            <TextBlock Text="{DynamicResource App_Title}"
                       FontSize="24" FontWeight="Bold"
                       Margin="0,0,0,20" TextAlignment="Center"/>

            <Button x:Name="BtnGoToPlaylist"
                    Content="{DynamicResource Main_GoToPlaylist}"
                    Width="220" Height="40" Margin="0,0,0,10"
                    Click="BtnGoToPlaylist_Click"/>

            <Button x:Name="BtnGoToAudioConverter"
                    Content="{DynamicResource Main_GoToAudioConv}"
                    Width="220" Height="40" Margin="0,0,0,16"
                    Click="BtnGoToAudioConverter_Click"/>

            <ComboBox x:Name="LanguageSelector" Width="220" Height="30"
                      SelectionChanged="LanguageSelector_SelectionChanged">
                <ComboBoxItem Content="{DynamicResource Main_Lang_UA}" Tag="uk"/>
                <ComboBoxItem Content="{DynamicResource Main_Lang_EN}" Tag="en"/>
                <ComboBoxItem Content="{DynamicResource Main_Lang_PL}" Tag="pl"/>
            </ComboBox>
        </StackPanel>

        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Right"
                   FontSize="10" Foreground="Gray">
            <Run Text="{DynamicResource Footer_Copy}"/>
            <Run Text=" "/>
            <Run Text="{DynamicResource Footer_By}"/>
            <Hyperlink NavigateUri="https://github.com/Rodion-Harmash/"
                       RequestNavigate="Hyperlink_RequestNavigate">
                by Rodion Harmash
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
