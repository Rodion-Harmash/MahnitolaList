<Window x:Class="MahnitolaList.Views.AudioConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AudioConv_Title}"
        Height="560" Width="920">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,0,8,0"/>
                </Style>
            </StackPanel.Resources>

            <Button x:Name="BtnPickFiles"
                    Content="{DynamicResource AudioConv_PickFiles}"
                    Click="BtnPickFiles_Click" Width="180"/>
            <Button x:Name="BtnClear"
                    Content="{DynamicResource AudioConv_Clear}"
                    Click="BtnClear_OnClick" Width="120"/>
            <CheckBox x:Name="ChkReplaceExisting"
                      Content="{DynamicResource AudioConv_Overwrite}"
                      Margin="12,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <ListView x:Name="FilesList"
                  Grid.Row="1"
                  Margin="0,10,0,10"
                  AllowDrop="True"
                  Drop="FilesList_OnDrop">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{DynamicResource AudioConv_Col_Input}" Width="360"
                                    DisplayMemberBinding="{Binding InputName}"/>
                    <GridViewColumn Header="{DynamicResource AudioConv_Col_Output}" Width="340">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding OutputName, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="{DynamicResource AudioConv_SampleRateNote}"
                       VerticalAlignment="Center" Margin="0,0,12,0" Opacity="0.7"/>
            <Button Content="{DynamicResource Btn_Back}"
                    Width="120" Margin="0,0,12,0"
                    Click="BtnBack_Click"/>
            <Button x:Name="BtnChooseOutput"
                    Content="{DynamicResource AudioConv_ChooseOutputDir}"
                    Click="BtnChooseOutput_Click" Width="220" Margin="0,0,8,0"/>
            <Button x:Name="BtnConvert"
                    Content="{DynamicResource AudioConv_Convert}"
                    Click="BtnConvert_Click" Width="180"/>
        </StackPanel>
    </Grid>
</Window>
